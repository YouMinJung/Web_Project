<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
	<name>Stock Chart</name>
	<author>Huy Tran</author>
	<creationDate>May 19, 2017</creationDate>
	<copyright>Sandman Media Inc. All rights reserved</copyright>
	<authorEmail>huytrcam@gmail.com</authorEmail>
	<version>1.0</version>
	<description>Stock Chart displays data pulled from Yahoo Finance.</description>

	<files>
		<filename>mod_stockchart.xml</filename>
		<filename module="mod_stockchart">mod_stockchart.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<folder>css</folder>
		<folder>js</folder>
	</files>
	<config>
        <fields name="params">
            <fieldset name="Stock_Config" label="Yahoo Finance Config">
                <field
                    name="symbol"
                    type="text"
                    label="Stock Symbol"/>

                 <field
                    name="Bcolor"
                    type="text"
                    label="Stock background_color"/>

                 <field
                    name="Hcolor"
                    type="text"
                    label="Stock hover_color"/>
            </fieldset>
        </fields>
    </config>
</extension>